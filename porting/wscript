from sys import path
from os.path import abspath
path.append(abspath('../common/'))

from waf import cmd_configure, cmd_build

def configure(ctx):
	cmd_configure(ctx)

def build(ctx):

	sub = {
		"VERSION":				"1.0",
		"RELEASE":				"5.0.0",
		"DOC":					"POSIX",
		"FILE_DOC":				"rtemsposix",
	}

	cmd_build(ctx, sub)
